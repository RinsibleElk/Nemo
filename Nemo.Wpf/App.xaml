<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nemo.Wpf;assembly=Nemo.Wpf">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Converters -->
                <ResourceDictionary>
                    <local:DataNodeToStringConverter x:Key="DataNodeToString" />
                </ResourceDictionary>
                <!-- Enums -->
                <ResourceDictionary>
                    <ObjectDataProvider
                        MethodName="GetValues"
                        ObjectType="{x:Type local:ChartType}"
                        x:Key="ChartTypeValues">
                        <ObjectDataProvider.MethodParameters>
                            <x:Type TypeName="local:ChartType" />
                        </ObjectDataProvider.MethodParameters>
                    </ObjectDataProvider>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
